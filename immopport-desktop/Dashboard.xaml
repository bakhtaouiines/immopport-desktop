<Window x:Class="immopport_desktop.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:immopport_desktop"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid x:Name="mainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="3.3*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="leftPanelGrid"  Background="#FFABADB3" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="140" Height="433">
            <Image x:Name="logoDashboard" Height="100" Width="100" Source="/Assets/logo_immopport.png" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,0,328"/>
            <Button x:Name="btnAnnonces" Content="Annonces" RenderTransformOrigin="0.05,0.503" Background="#FFEA4141" BorderBrush="#FFABADB3" Click="Button_Click" Foreground="White" FontFamily="Verdana" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,104,0,265" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="65"/>
            <Button x:Name="btnEmployes" Content="Employés" RenderTransformOrigin="0.05,0.503" Background="#FFEA4141" BorderBrush="#FFABADB3" Foreground="White" Click="Button_Click_1" FontFamily="Verdana" FontSize="18" FontWeight="Bold" Margin="0,169,0,199" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="65"/>
            <Button x:Name="btnRDV" Content="RDV" Margin="0,235,0,133" RenderTransformOrigin="0.05,0.503" Background="#FFEA4141" BorderBrush="#FFABADB3" Foreground="White" FontFamily="Verdana" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Height="65"/>
            <Button x:Name="btnClients" Content="Clients" Margin="0,301,0,67" RenderTransformOrigin="0.05,0.503" Background="#FFEA4141" BorderBrush="#FFABADB3" Foreground="White" FontFamily="Verdana" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Height="65"/>
            <Button x:Name="btnLogOut" Content="Déconnexion" Margin="0,367,0,1" RenderTransformOrigin="0.05,0.503" Background="#FFEA4141" BorderBrush="#FFABADB3" Foreground="White" FontFamily="Verdana" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Height="65"/>

        </Grid>
        <Grid x:Name="rightPanelGrid" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="3.5*" />

            </Grid.RowDefinitions>

            <Grid x:Name="topBarGrid"  Background="#FFEA4141" Width="660" Margin="0,0,0,0" >
                <TextBlock x:Name="txtLogInfos" HorizontalAlignment="Center" Height="30" TextWrapping="Wrap" Text="Taslima Ahamed Mze                     44567" VerticalAlignment="Center" Width="415" FontWeight="Bold" FontSize="18" TextAlignment="Center" Foreground="White" FontFamily="Verdana"/>
            </Grid>
            <Grid x:Name="contentGrid" Grid.Row="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="35*"/>
                    <RowDefinition Height="41*"/>
                </Grid.RowDefinitions>
                <ContentControl x:Name="contentControl" Grid.RowSpan="2" Width="659" />
            </Grid>


        </Grid>
    </Grid>
</Window>