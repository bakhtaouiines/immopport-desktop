<Window x:Class="immopport_desktop.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:immopport_desktop"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="3.3*" />
        </Grid.ColumnDefinitions>
        <Grid  Background="#FFEA4141">
            <Image HorizontalAlignment="Center" Height="100" Margin="0,43,0,0" VerticalAlignment="Top" Width="100" Source="/logo_immopport1.png"/>
            <Button Content="Annonces" HorizontalAlignment="Center" Margin="0,188,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.05,0.503" Background="#FFEA4141" Height="48" Width="104" BorderBrush="#FFEA4141" Click="Button_Click"/>
            <Button Content="Users" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.05,0.503" Background="#FFEA4141" Height="48" Width="104" BorderBrush="#FFEA4141"  Margin="0,258,0,0"/>
            <Button Content="RDV" HorizontalAlignment="Center" Margin="0,311,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.05,0.503" Background="#FFEA4141" Height="48" Width="104" BorderBrush="#FFEA4141"/>


        </Grid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="3.5*" />

            </Grid.RowDefinitions>

            <Grid  Background="#FFEA4141" >
                <TextBlock HorizontalAlignment="Left" Height="30" Margin="307,0,0,0" TextWrapping="Wrap" Text="Taslima Ahamed Mze                     44567" VerticalAlignment="Center" Width="375" FontWeight="Bold" FontSize="18" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1" >
                <ContentControl x:Name="contentControl" />
            </Grid>


        </Grid>
    </Grid>
</Window>
