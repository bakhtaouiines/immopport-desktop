<Window x:Class="immopport_desktop.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:immopport_desktop"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="3.3*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="leftPanelGrid" Background="#FFEA4141">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image Style="{StaticResource DashboardLogoStyle}" x:Name="logoDashboard" />
            
            <Button x:Name="btnAnnonces" 
                Grid.Column="1" 
                Grid.Row="1" 
                Content="Annonces"  
                RenderTransformOrigin="0.05,0.503" 
                Background="#FFEA4141"  
                BorderBrush="#FFE0CACA" 
                Click="Button_Click" 
                FontSize="18" 
                FontWeight="Bold"  
            />
            <Button x:Name="btnEmployes" 
                Grid.Row="2"  
                Content="Employées"  
                RenderTransformOrigin="0.05,0.503" 
                Background="#FFEA4141"  
                BorderBrush="#FFE0CACA" 
                FontSize="18" 
                FontWeight="Bold" 
                Click="Button_Click_1"
            />
            <Button x:Name="btnRDV" 
                Grid.Row="3"  
                Content="Rdv"  
                RenderTransformOrigin="0.05,0.503" 
                Background="#FFEA4141"  
                BorderBrush="#FFE0CACA" 
                FontSize="18" 
                FontWeight="Bold" 
                Click="Button_Click_2" 
            />
            <Button x:Name="btnClients" 
                Grid.Row="4"  
                Content="Clients"  
                RenderTransformOrigin="0.05,0.503" 
                Background="#FFEA4141"  
                BorderBrush="#FFE0CACA" 
                FontSize="18" 
                FontWeight="Bold" 
            />
            <Button x:Name="btnLogOut" 
                Grid.Row="5"  
                Content="Déconnexion"  
                RenderTransformOrigin="0.05,0.503" 
                Background="#FFEA4141"  
                BorderBrush="#FFE0CACA" 
                FontSize="18" 
                FontWeight="Bold" 
            />

        </Grid>
        
        <Grid x:Name="rightPanelGrid" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="3.5*" />
            </Grid.RowDefinitions>

            <Grid x:Name="topBarGrid"  Background="#FFEA4141" >
                <TextBlock x:Name="txtBlockUserName" 
                    HorizontalAlignment="Left" 
                    Height="30"
                    Margin="37,0,0,0"
                    Text="Taslima Ahamed Mze"
                    VerticalAlignment="Center" 
                    Width="375" 
                    FontWeight="Bold" 
                    FontSize="18" 
                    TextAlignment="Center"
                />
                <TextBlock x:Name="txtBlockUserMatricule"
                    HorizontalAlignment="Right" 
                    Height="30" 
                    Margin="0,0,0,0"
                    VerticalAlignment="Center" 
                    Width="375" 
                    FontWeight="Bold" 
                    FontSize="18" 
                    TextAlignment="Center"
                    Text="44567"
                />
            </Grid>
            <Grid x:Name="contentGrid" Grid.Row="1" >
                <ContentControl x:Name="contentControl" />
            </Grid>
        </Grid>
    </Grid>
</Window>